<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowActionBarOverlay">false</item> <!-- 启用Overlay模式 -->
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>  <!-- 修改ActionBar样式 -->
        
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">false</item>
    	<item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>     
    
    <style name="Theme" parent="BaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:checkboxStyle">@style/Theme.Checkbox</item>
        <item name="android:radioButtonStyle">@style/Theme.RadioButton</item>
        <item name="android:textViewStyle">@style/Theme.TextAppearance</item>
		<item name="android:windowAnimationStyle">@style/Theme.Translucent</item>
    </style>
    
     <style name="Theme.NoActionBar" parent="Theme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.NoActionBar.Fullscreen" parent="Theme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    
    
    <!-- ActionBar Style -->
    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:indeterminateProgressStyle">@android:style/Widget.ProgressBar.Small.Inverse</item> 
        
        <item name="background">@drawable/actionbar_background</item>
        <item name="indeterminateProgressStyle">@android:style/Widget.ProgressBar.Small.Inverse</item> 
    </style>
    <style name="Widget.IndeterminateProgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>
    
    
</resources>
